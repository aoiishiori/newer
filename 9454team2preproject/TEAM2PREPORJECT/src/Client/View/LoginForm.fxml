<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="580.0" prefWidth="880.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.CONTROLLER.LogInController">
    <center>
        <VBox alignment="CENTER" maxWidth="450.0" spacing="30.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-radius: 15;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="50.0" left="40.0" right="40.0" top="50.0" />
            </padding>
            <effect>
                <DropShadow blurType="THREE_PASS_BOX" height="30.0" radius="14.5" width="30.0">
                    <color>
                        <Color opacity="0.1" />
                    </color>
                </DropShadow>
            </effect>
            <children>
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="WELCOME">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Label>
                        <Label text="TO THE APPLICATION NAME" textFill="#7f8c8d">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <VBox spacing="20.0">
                    <children>
                        <VBox spacing="8.0">
                            <children>
                                <Label text="Username">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="UserNameInput" prefHeight="45.0" promptText="Enter your username" style="-fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-color: white;" />
                            </children>
                        </VBox>

                        <VBox spacing="8.0">
                            <children>
                                <Label text="Password">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <PasswordField fx:id="PasswordInput" prefHeight="45.0" promptText="Enter your password" style="-fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-color: white;" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <VBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button fx:id="LogInButton" mnemonicParsing="false" onAction="#handleLogIn" prefHeight="45.0" prefWidth="400.0" style="-fx-background-color: #1877f2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Log In">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>

                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Don't have an account?" textFill="#606770" />
                                <Hyperlink fx:id="CreateAccount" onAction="#handleSignUp" style="-fx-text-fill: #1877f2; -fx-font-weight: bold;" text="Sign Up" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>